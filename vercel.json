{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "installCommand": "npm install --production",
  "hooks": {
    "preBuild": "echo 'Starting Tadabbur backend deployment...'",
    "preInstall": "echo 'Installing dependencies...'"
  }
}
