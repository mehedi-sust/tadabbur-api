{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "memory": 2048,
        "includeFiles": ["node_modules/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.js",
      "headers": {
        "Cache-Control": "public, max-age=300"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "npm install --production --ignore-scripts"
}
